<!DOCTYPE html>
<html lang="en-GB">
    <head>
        <title>Main Page</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/bootstrap.css">
        <link rel="stylesheet" href="/css/fyp.css">
    </head>

    <!-- create Group Modal -->
    <div class="modal fade" id="createGroupModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create a Group</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="text" class="form-control" placeholder="Group name">
                    <input type="text" class="form-control" placeholder="Description">
                    <input type="date" class="form-control" placeholder="Start Date">
                    <input type="date" class="form-control" placeholder="End Date">
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-success">Create</button>
                </div>
            </div>
        </div>
    </div>

    <!-- join Group Modal -->
    <div class="modal fade" id="joinGroupModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Join a Group</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="text" class="form-control" placeholder="Group code">
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-success">Join</button>
                </div>
            </div>
        </div>
    </div>

    <!-- profile Page Modal -->
    <div class="modal fade" id="profilePageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <!-- Banner -->
                <div id="profileBanner" class="position-relative" style="height: 180px; background: #cccccc;">
                    <img id="profilePicture"
                        src="/uploads/default.png"
                        class="rounded-circle position-absolute"
                        style="width: 120px; height: 120px; object-fit: cover; bottom: -60px; left: 20px; border: 4px solid white;">
                </div>

                <div class="modal-body mt-5">

                    <!-- VIEW MODE -->
                    <div id="profileViewMode">
                        <h3 id="displayName" class="fw-bold">Display Name</h3>
                        <p id="username" class="text-muted">@username</p>
                        <p id="bio">This is the user bio.</p>

                        <button class="btn btn-success w-100 mt-4" onclick="enableProfileEdit()">
                            EDIT PROFILE
                        </button>
                    </div>

                    <!-- EDIT MODE -->
                    <div id="profileEditMode" class="d-none">

                        <label class="fw-semibold mt-3">Display Name</label>
                        <input id="editDisplayName" type="text" class="form-control mb-3">

                        <label class="fw-semibold">Bio</label>
                        <textarea id="editBio" class="form-control mb-3" rows="3"></textarea>

                        <label class="fw-semibold">Banner Color</label>
                        <input id="editBannerColor" type="color" class="form-control form-control-color mb-3">

                        <label class="fw-semibold">Profile Picture</label>
                        <input id="editProfilePic" type="file" accept="image/*" class="form-control mb-4">

                        <div class="d-flex justify-content-between gap-3 mt-4">
                            <button class="btn btn-secondary flex-fill" onclick="cancelProfileEdit()">Cancel</button>
                            <button class="btn btn-success flex-fill" onclick="saveProfileChanges()">Save Changes</button>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- friends Page Modal -->
    <div class="modal fade" id="friendsPageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Friends</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <!-- Friend Code -->
                    <div class="mb-4">
                        <label class="fw-semibold">Your Friend Code</label>
                        <div class="d-flex align-items-center">
                            <input id="userFriendCode" type="text" class="form-control me-2" readonly>
                            <button onclick="copyFriendCode()" class="btn btn-outline-secondary">Copy</button>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 mb-4">
                        <button class="btn btn-success flex-fill" data-bs-toggle="modal" data-bs-target="#addFriendModal">
                            Add Friend
                        </button>
                        <button class="btn btn-success flex-fill" data-bs-toggle="modal" data-bs-target="#inviteFriendModal">
                            Invite Friend
                        </button>
                    </div>

                    <hr>

                    <!-- Friends List -->
                    <h6 class="fw-bold">Your Friends</h6>
                    <ul id="friendsList" class="list-group mt-2">
                        <!-- dynamic js fill again  -->
                    </ul>

                </div>

            </div>
        </div>
    </div>

    <!-- add Friend Modal -->
    <div class="modal fade" id="addFriendModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Add Friend</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <label class="fw-semibold">Username</label>
                    <input id="addFriendUsername" type="text" class="form-control mb-3">

                    <label class="fw-semibold">Friend Code</label>
                    <input id="addFriendCode" type="text" class="form-control mb-4" placeholder="XXXX-XXXX-XXXX">

                    <p class="text-muted small mb-4">
                        Make sure your friend does the same!
                    </p>

                    <div class="d-flex gap-3">
                        <button class="btn btn-secondary flex-fill" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-success flex-fill" onclick="handleAddFriend()">Confirm</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- invite Friend Modal -->
    <div class="modal fade" id="inviteFriendModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Invite Friend to Group</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <label class="fw-semibold">Select Friend</label>
                    <select id="inviteFriendSelect" class="form-select mb-3">
                    </select>

                    <label class="fw-semibold">Select Group</label>
                    <select id="inviteGroupSelect" class="form-select mb-3">
                    </select>

                    <label class="fw-semibold">Assign Role</label>
                    <select id="inviteRoleSelect" class="form-select mb-4">
                    </select>

                    <div class="d-flex gap-3">
                        <button class="btn btn-secondary flex-fill" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-success flex-fill" onclick="confirmInviteFriend()">Invite</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <body>
        <header>
            <div class="container-fluid">
                <div class="about">
                    <h1>TEMPLATENAME FOR WEBSITE</h1>
                    <p>The newest and cutest travelling blogsite!</p>
                </div>
            </div>
        </header>
        
        <main class="container py-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-semibold">Your Groups</h2>
                <div class="btn-group">
                    <button
                            type="button"
                            class="btn btn-success"
                            data-bs-toggle="modal"
                            data-bs-target="#createGroupModal"
                        >
                            + Create Group
                    </button>
                    <button
                            type="button"
                            class="btn btn-outline-primary"
                            data-bs-toggle="modal"
                            data-bs-target="#joinGroupModal"
                        >
                            Join Group
                    </button>
                </div>
            </div>

            <div id="groupList" class="row g-4"> </div>
            <!--dynamically load groups-->

            <script src="/js/bootstrap.bundle.js"></script>
            <script src="/js/fyp.js"></script>
            
        </main>


        <div class="bottom-left-buttons">
            
            <button
                    type="button"
                    class="square-btn btn btn-basic"
                    data-bs-toggle="modal"
                    data-bs-target="#profilePageModal"
                >
                    Profile
            </button>

                        <button
                    type="button"
                    class="square-btn btn btn-basic"
                    data-bs-toggle="modal"
                    data-bs-target="#friendsPageModal"
                >
                    Friends
            </button>
        </div>
    </body>
</html>
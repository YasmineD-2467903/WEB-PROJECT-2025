<div class="settings-section">
    <h1 class="settings-header">Settings</h1>

    <div class="settings-grid" id="admin">
    <!-- basically ik groupeer de checkboxes in 1 item en dee knoppen in 1 item zodat ze ltijd smen gectegorizeerd zijn in de grid-->
        <div class="setting-item"> 
            <!-- instelling voor invites (member) -->
            <div class="form-check form-switch"> <!-- online van de bootstrap checkbox page gestolen lol -->
                <input class="form-check-input" type="checkbox" id="memberInvitationCheck">
                <label class="form-check-label" for="memberInvitationCheck">Allow members to invite others?</label>
            </div>
            <!-- instelling voor polls (member) -->
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="memberPollCheck">
                <label class="form-check-label" for="memberPollCheck">Allow members to create polls?</label>
            </div>
            <!-- instelling voor chats (viewer) -->
            <div class="form-check form-switch"> 
                <input class="form-check-input" type="checkbox" id="viewerChatCheck">
                <label class="form-check-label" for="viewerChatCheck">Allow viewers to chat?</label>
            </div>
        </div>

        <div class="setting-item">
            <!-- instelling om bio te changen -->
            <input class="form-control" type="text" id="changeBio" maxlength="80" placeholder="Change biography">
            <!-- instelling om titel te changen -->
            <input class="form-control" type="text" id="changeTitle" maxlength="80" placeholder="Change title">
            <!-- instelling om begin/end date te changen -->
            <input class="form-control" type="datetime-local" id="changeStartDate">
            <input class="form-control" type="datetime-local" id="changeEndDate">
        </div>
    </div>

</div>
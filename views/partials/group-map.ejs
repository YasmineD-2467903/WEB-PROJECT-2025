<body>
  <!-- controls -->
  <div class="map-controls">
    <input id="pac-input" class="controls" type="text" placeholder="Search Box"/>
    <button id="addStopBtn" class="btn btn-primary">Add stop</button>
    <button id="generateRouteBtn" class="btn btn-primary">Generate Route</button>
  </div>

  <!-- map -->
  <gmp-map center="50,5" zoom="14" map-id="DEMO_MAP_ID" allow="geolocation" id="test"></gmp-map>

  <!-- daily Planner -->
  <section id="daily-planner">
    <header class="planner-header">
      <button id="prevDayBtn" class="btn btn-secondary">&lt; Previous Day</button>
      <h2 id="plannerDate">YYYY-MM-DD</h2>
      <button id="nextDayBtn" class="btn btn-secondary">Next Day &gt;</button>
    </header>
    <div id="stopsContainer" class="row g-4">
      <!-- stops will load dynamically here -->
    </div>
  </section>

  <!-- add stop modal -->
  <div class="modal fade" id="addStopModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title fw-semibold">Add Stop</h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addStopForm">
            <div class="mb-2">
              <label for="stopTitle" id="popup-label">Title</label>
              <input type="text" id="stopTitle" name="title" class="form-control ms-1 w-100" required>
            </div>
            <div class="mb-2">
              <label for="stopStart" id="popup-label">Start Date & Time</label>
              <input type="datetime-local" id="stopStart" name="startDate" class="form-control ms-1 w-100" required>
            </div>
            <div class="mb-2">
              <label for="stopEnd" id="popup-label">End Date & Time</label>
              <input type="datetime-local" id="stopEnd" name="endDate" class="form-control ms-1 w-100" required>
            </div>
            <div class="mb-2">
              <label for="stopNotes" id="popup-label">Notes</label>
              <textarea id="stopNotes" name="description" class="form-control ms-1 w-100"></textarea>
            </div>
            <div class="mb-2">
              <label for="stopFiles" id="popup-label">Upload Files</label>
              <input type="file" id="stopFiles" name="files" multiple class="form-control ms-1 w-100">
            </div>
            <button type="submit" class="btn btn-primary" id="saveStop">Save Stop</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- edit stop modal -->
  <div class="modal fade" id="editStopModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content p-3">
        <div class="modal-header">
          <h3 class="modal-title fw-semibold">Edit Stop</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <form id="editStopForm" enctype="multipart/form-data">
          <div class="mb-2">
            <label for="editStopTitle" id="popup-label">Title</label>
            <input id="editStopTitle" name="title" class="form-control ms-1 w-100" required>
          </div>

          <div class="mb-2">
            <label for="editStopDescription" id="popup-label">Notes</label>
            <textarea id="editStopDescription" name="description" class="form-control ms-1 w-100"></textarea>
          </div>

          <div class="mb-2">
            <label for="editStopStart" id="popup-label">Start Date & Time</label>
            <input id="editStopStart" name="startDate" type="datetime-local" class="form-control ms-1 w-100" required>
          </div>

          <div class="mb-2">
            <label for="editStopEnd" id="popup-label">End Date & Time</label>
            <input id="editStopEnd" name="endDate" type="datetime-local" class="form-control ms-1 w-100" required>
          </div>

          <div class="mb-2">
            <label id="popup-label">Existing Files</label>
            <div id="existingFiles" class="mb-2"></div>
          </div>

          <div class="mb-2">
            <label for="editStopFiles" id="popup-label">Upload New Files</label>
            <input id="editStopFiles" name="files" type="file" multiple class="form-control ms-1 w-100">
          </div>

          <div class="editBtns">
            <button type="submit" id="saveEditStopBtn" class="btn btn-primary">
              <i class="bi bi-save-fill me-1"></i>
              Save
            </button>
            <button type="button" id="deleteStopBtn" class="btn btn-danger">
              <i class="bi bi-x-lg"></i>
              Delete
            </button>
          </div>
        </form>

      </div>
    </div>
  </div>
</body>

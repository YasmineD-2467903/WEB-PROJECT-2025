<div class="d-flex flex-column h-100">

  <div 
    id="chatMessages" 
    class="border rounded p-3 mb-3 flex-grow-1 overflow-auto"
    style="height: 400px; background: #f8f9fa;">
    <div class="text-muted text-center">Loading messages...</div>
  </div>

  <div id="chatInputArea" class="input-group">
    <input 
      type="text" 
      id="chatInput" 
      class="form-control ms-1 rounded-3" 
      placeholder="Type a message..."
      autocomplete="off"
    >
    <button class="btn btn-primary" id="sendChatBtn">
      <i class="bi bi-send-fill"></i>
    </button>
  </div>

</div>
